<!DOCTYPE html>
<html>
<head>
    <title>{{ organization.name }} - Groups</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container py-4">
    <a href="{% url 'org_dashboard' organization.slug %}" class="btn btn-link">← Back</a>
    <h1>Contact Groups</h1>
    {% if notice %}<div class="alert alert-info">{{ notice }}</div>{% endif %}

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header">Existing Groups</div>
                <div class="card-body">
                    {% if groups %}
                        <ul class="list-group">
                        {% for g in groups %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{ g.name }}</strong>
                                    <div class="small text-muted">{{ g.contacts.count }} contacts</div>
                                </div>
                                <div>
                                    <form method="post" class="d-inline">
                                        {% csrf_token %}
                                        <input type="hidden" name="action" value="edit">
                                        <input type="hidden" name="group_id" value="{{ g.id }}">
                                        <button formaction="?edit={{ g.id }}" class="btn btn-sm btn-outline-secondary">Edit</button>
                                    </form>
                                    <form method="post" class="d-inline">
                                        {% csrf_token %}
                                        <input type="hidden" name="action" value="delete">
                                        <input type="hidden" name="group_id" value="{{ g.id }}">
                                        <button class="btn btn-sm btn-danger" onclick="return confirm('Delete group?')">Delete</button>
                                    </form>
                                </div>
                            </li>
                        {% endfor %}
                        </ul>
                    {% else %}
                        <p>No groups yet.</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header">Create Group</div>
                <div class="card-body">
                    <form method="post">
                        {% csrf_token %}
                        <input type="hidden" name="action" value="create">
                        <div class="mb-2">
                            <label class="form-label">Group name</label>
                            <input name="name" class="form-control" placeholder="e.g., Staff, Parents">
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Add contacts</label>
                            <select name="contacts" multiple class="form-select">
                                {% for c in contacts %}
                                    <option value="{{ c.id }}">{{ c.name }} — {{ c.phone_number }}</option>
                                {% endfor %}
                            </select>
                            <div class="form-text">Hold Ctrl (or Cmd) to select multiple contacts.</div>
                        </div>
                        <button class="btn btn-primary">Create group</button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header">Edit Group</div>
                <div class="card-body">
                    {% if edit_group %}
                        <form method="post">
                            {% csrf_token %}
                            <input type="hidden" name="action" value="edit">
                            <input type="hidden" name="group_id" value="{{ edit_group.id }}">
                            <div class="mb-2">
                                <label class="form-label">Group name</label>
                                <input name="name" class="form-control" value="{{ edit_group.name }}">
                            </div>
                            <div class="mb-2">
                                <label class="form-label">Contacts</label>
                                <select name="contacts" multiple class="form-select">
                                    {% for c in contacts %}
                                        <option value="{{ c.id }}" {% if c in edit_group.contacts.all %}selected{% endif %}>{{ c.name }} — {{ c.phone_number }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <button class="btn btn-primary">Save group</button>
                        </form>
                    {% else %}
                        <p>Select Edit on a group to modify it.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
    {% load static %}
    <title>{{ organization.name }} - Groups</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container py-4">
        <a href="{% url 'org_dashboard' organization.slug %}" class="btn btn-link">← Back</a>
        <div class="card shadow">
            <div class="card-header bg-primary text-white">Contact Groups</div>
            <div class="card-body">
                {% if notice %}<div class="alert alert-success">{{ notice }}</div>{% endif %}
                <form method="post">
                    {% csrf_token %}
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Group name</label>
                            <input type="text" name="name" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Select contacts</label>
                            <select name="contacts" class="form-select" multiple>
                                {% for c in contacts %}
                                    <option value="{{ c.id }}">{{ c.name }} — {{ c.phone_number }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-12">
                            <input type="hidden" name="action" value="create">
                            <button class="btn btn-primary">Create Group</button>
                        </div>
                    </div>
                </form>
                <hr />
                <h5>Existing Groups</h5>
                <ul class="list-group">
                    {% for g in groups %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>{{ g.name }}</strong> — {{ g.contacts.count }} contacts
                            </div>
                            <div>
                                <form method="post" class="d-inline">
                                    {% csrf_token %}
                                    <input type="hidden" name="action" value="delete">
                                    <input type="hidden" name="group_id" value="{{ g.id }}">
                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </li>
                    {% empty %}
                        <li class="list-group-item">No groups yet.</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</body>
</html>
